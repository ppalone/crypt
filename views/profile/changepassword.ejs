<%- include ('../partials/header.ejs') %>

<div class="container">
  <%- include ('../partials/navbar.ejs') %>

  <div class="menu">
    <div>
      <a href="/profile">Back to Profile</a>
    </div>
  </div>

  <div class="login-div">
    <div class="login-txt">
      <h3>CHANGE PASSWORD</h3>
    </div>

    <form action="/changepassword" method="POST">
      <%- include ('../users/partials/messages') %>
      <div>
        <label for="oldpassword">Old Password</label>
      </div>
      <div>
        <input
          class="login-ip"
          type="password"
          name="oldpassword"
          placeholder="password"
          autocomplete="off"
          required
        />
      </div>
      <div>
        <label for="newpassword">New Password</label>
      </div>
      <div>
        <input
          class="login-ip"
          type="password"
          name="newpassword"
          placeholder="password"
          autocomplete="off"
          required
        />
      </div>
      <div>
        <input class="login-sub" type="submit" value="CHANGE PASSWORD" />
      </div>
    </form>
  </div>
</div>

<%- include ('../partials/footer.ejs') %>
